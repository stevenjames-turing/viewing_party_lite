<!DOCTYPE html>
<html>
  <head>
    <title>ViewingPartyLite</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= link_to "Home", "/" %>
    <% if current_user %>
      <div align="right">
        <%= button_to("Logout", logout_path, method: :delete) %>
      </div>
    <% else %>
      <div align="right" id="button">
            <%= button_to("Log In", login_form_path, method: :get)%>      
            <%= button_to("Create a New User", new_user_path, method: :get)%>      
      </div>
    <% end %>
    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <div class="top-container">
      <h1 style="text-align:center; background-color:#EBEFF3;">    <%= link_to "Viewing Party Light", "/" %> </h1>
      <% flash.each do |type, notice| %>
        <h3><b><%= notice %></b></h3>
      <% end %>
      <%= yield %>
    </div>
  </body>
</html>
